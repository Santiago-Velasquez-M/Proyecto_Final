<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.biblioteca.parcial1.ViewController.PagosViewController"
            prefWidth="800" prefHeight="600">

    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <padding>
            <Insets top="20" right="25" bottom="20" left="25"/>
        </padding>

        <Label text="Gestión de Pagos" style="-fx-font-size: 22; -fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="ID Pago:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtIdPago" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Monto:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtMonto" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Método de Pago:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="comboMetodoPago" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Fecha de Pago:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dateFechaPago" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="12" alignment="CENTER">
            <Button text="Registrar" onAction="#registrarPago"/>
            <Button text="Actualizar" onAction="#actualizarPago"/>
            <Button text="Eliminar" onAction="#eliminarPago"/>
            <Button text="Limpiar" onAction="#limpiar"/>
        </HBox>

        <TableView fx:id="tablaPagos" prefWidth="700" prefHeight="300">
            <columns>
                <TableColumn fx:id="colIdPago" text="ID" prefWidth="100"/>
                <TableColumn fx:id="colMetodo" text="Método" prefWidth="150"/>
                <TableColumn fx:id="colMonto" text="Monto" prefWidth="150"/>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="200"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
