<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.biblioteca.parcial1.ViewController.EnvioViewController"
            prefWidth="850" prefHeight="600">

    <VBox spacing="15" alignment="CENTER"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

        <padding>
            <Insets top="20" right="25" bottom="20" left="25"/>
        </padding>

        <!-- ===== TÍTULO ===== -->
        <Label text="Gestión de Envíos"
               style="-fx-font-size: 22; -fx-font-weight: bold;"/>

        <!-- ===== FORMULARIO ===== -->
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

            <Label text="Origen:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtOrigen" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Destino:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDestino" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Peso (kg):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPeso" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Volumen (m³):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtVolumen" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Costo:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCosto" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Estado:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <ComboBox fx:id="comboEstado" GridPane.rowIndex="6" GridPane.columnIndex="1" prefWidth="200"/>
        </GridPane>

        <!-- ===== BOTONES ===== -->
        <HBox spacing="12" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Agregar" onAction="#registrarEnvio"/>
            <Button text="Actualizar" onAction="#actualizarEnvio"/>
            <Button text="Eliminar" onAction="#eliminarEnvio"/>
            <Button text="Limpiar" onAction="#limpiar"/>
        </HBox>

        <!-- ===== TABLA DE ENVÍOS ===== -->
        <TableView fx:id="tablaEnvios" prefHeight="300" prefWidth="800">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                <TableColumn fx:id="colOrigen" text="Origen" prefWidth="120"/>
                <TableColumn fx:id="colDestino" text="Destino" prefWidth="120"/>
                <TableColumn fx:id="colPeso" text="Peso (kg)" prefWidth="80"/>
                <TableColumn fx:id="colVolumen" text="Volumen (m³)" prefWidth="100"/>
                <TableColumn fx:id="colCosto" text="Costo ($)" prefWidth="90"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                <TableColumn fx:id="colFecha" text="Fecha Creación" prefWidth="140"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
