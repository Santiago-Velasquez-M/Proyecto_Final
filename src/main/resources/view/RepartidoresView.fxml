<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.biblioteca.parcial1.ViewController.RepartidoresViewController">

    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Gestión de Repartidores" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints halignment="LEFT"/>
                </columnConstraints>

                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Documento:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDocumento" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Teléfono:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelefono" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Vehículo:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtVehiculo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Placa:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPlaca" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Zona Cobertura:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="txtZona" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Label text="Disponibilidad:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <ComboBox fx:id="comboDisponibilidad" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="15" alignment="CENTER">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Button text="Agregar" onAction="#agregar"/>
                <Button text="Actualizar" onAction="#actualizar"/>
                <Button text="Eliminar" onAction="#eliminar"/>
                <Button text="Limpiar" onAction="#limpiar"/>
            </HBox>

            <TableView fx:id="tblRepartidores" prefWidth="800" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                    <TableColumn fx:id="colDocumento" text="Documento" prefWidth="100"/>
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="100"/>
                    <TableColumn fx:id="colVehiculo" text="Vehículo" prefWidth="100"/>
                    <TableColumn fx:id="colPlaca" text="Placa" prefWidth="80"/>
                    <TableColumn fx:id="colZona" text="Zona Cobertura" prefWidth="150"/>
                    <TableColumn fx:id="colDisponibilidad" text="Disponibilidad" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
