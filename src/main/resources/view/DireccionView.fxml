<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.biblioteca.parcial1.ViewController.DireccionViewController">

    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">

            <Label text="Gestión de Direcciones"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Dirección:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDireccion" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Ciudad:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCiudad" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Latitud:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtLatitud" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Longitud:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="txtLongitud" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="15" alignment="CENTER">
                <Button text="Agregar" onAction="#agregar"/>
                <Button text="Actualizar" onAction="#actualizar"/>
                <Button text="Eliminar" onAction="#eliminar"/>
                <Button text="Limpiar" onAction="#limpiar"/>
            </HBox>

            <TableView fx:id="tblDirecciones" prefWidth="700" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="100"/>
                    <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="150"/>
                    <TableColumn fx:id="colCiudad" text="Ciudad" prefWidth="100"/>
                    <TableColumn fx:id="colLatitud" text="Latitud" prefWidth="100"/>
                    <TableColumn fx:id="colLongitud" text="Longitud" prefWidth="100"/>
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>
