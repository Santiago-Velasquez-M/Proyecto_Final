<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.biblioteca.parcial1.ViewController.LoginViewController"
            style="-fx-background-color: #f0f2f5;">

    <center>
        <VBox alignment="CENTER">
            <VBox spacing="15" alignment="CENTER"
                  style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);"
                  maxWidth="350">

                <Label text="Iniciar sesión"
                       style="-fx-font-size: 22; -fx-font-weight: bold;" />

                <TextField fx:id="txtUsuario"
                           promptText="Usuario o correo"
                           maxWidth="250" />

                <PasswordField fx:id="txtContrasena"
                               promptText="Contraseña"
                               maxWidth="250" />

                <Button text="Ingresar"
                        onAction="#onIngresar"
                        maxWidth="250"
                        style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 5;" />

                <Label fx:id="lblMensaje"
                       textFill="red"
                       wrapText="true"
                       maxWidth="250"
                       style="-fx-font-size: 12;" />

                <!-- ENLACE DE REGISTRO (vacío por ahora, como pediste) -->
                <Hyperlink text="¿No tienes usuario? Regístrate aquí"
                           fx:id="linkRegistro"
                           onAction="#onRegistrar"
                           style="-fx-font-size: 12;" />


            </VBox>
        </VBox>
    </center>

</BorderPane>
